{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2018",
    "jsx": "react",

    "strict": true,
    "alwaysStrict": true,

    "allowJs": false,
    "checkJs": false,
    "sourceMap": false,
    "resolveJsonModule": true,
    "removeComments": true,
    "declaration": false,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": false,

    "noEmit": true,
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,

    "keyofStringsOnly": true,
  },

  "include": [
    "src",
    "build/action",

    ".eslintrc.js",
    "commitlint.config.js",
    "husky.config.js",
    "jest.config.js",
  ],

  "exclude": [
    "node_modules",
    "build/workspace",
  ],
}
